		}
	},
	"requiredPrivateInfos": [
		"getLocation",
		"startLocationUpdate",
		"onLocationChange"
	],
	"tabBar": {
		"custom": true,
		"color": "#2c2c2c",
		"selectedColor": "#55B89A",
		"backgroundColor": "#fff",
		"borderStyle": "white",
		"list": [{
				"text": "首页",
				"pagePath": "pages/index/index"
			},
			{
				"text": "科普",
				"pagePath": "pages/science/index"
			},
			{
				"text": "分享",
